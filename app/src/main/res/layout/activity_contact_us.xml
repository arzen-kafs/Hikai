<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="0dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_anchorGravity="center_horizontal"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:background="@drawable/main_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/signup_back_image_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:transitionName="transition_back_arrow_btn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="250dp"
                android:layout_height="208dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rkm"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="monospace"
                    android:text="@string/rkm"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/address"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="monospace"
                    android:text="@string/rkmaddress"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"/>
            </LinearLayout>

        </LinearLayout>
          </LinearLayout>



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="50dp"
       android:padding="30dp"
       android:orientation="vertical"
       android:background="@drawable/round_edit_text"
       >


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center|center_vertical"
               android:layout_weight="1"
               android:orientation="horizontal">

               <ImageView
                   android:layout_gravity="center"
                   android:padding="10dp"
                   android:id="@+id/btcall"
                   android:paddingLeft="20dp"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_marginLeft="20dp"
                   android:src="@drawable/phone" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginLeft="30dp"
               >

               <TextView
                   android:id="@+id/textView20"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="10dp"
                   android:fontFamily="@font/school_story"
                   android:text="Call Us"
                   android:textColor="@color/white"
                   android:textSize="20sp"></TextView>

               <TextView
                   android:id="@+id/textView"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginTop="10dp"
                   android:textColor="@color/white"
                   android:text="(03637) 235242"
                   android:textSize="20sp" />
           </LinearLayout>
           </LinearLayout>

       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center|center_vertical"
               android:layout_weight="1"
               android:orientation="horizontal">

               <ImageView
                   android:layout_gravity="center"
                   android:padding="10dp"
                   android:id="@+id/email"
                   android:paddingLeft="20dp"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_marginLeft="20dp"
                   android:src="@drawable/email" />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="30dp">

                   <TextView
                       android:id="@+id/txtemail"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/white"
                       android:text="Email"
                       android:fontFamily="@font/school_story"
                       android:textSize="20sp">
                   </TextView>

                   <TextView
                       android:id="@+id/txtfax"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/white"
                       android:text="rkmhikaionline@gmail.com"
                       android:textSize="20sp" />
               </LinearLayout>
           </LinearLayout>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="30dp"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center|center_vertical"
               android:layout_weight="1"
               android:orientation="horizontal">

               <ImageView
                   android:layout_gravity="center"
                   android:padding="10dp"
                   android:id="@+id/print"
                   android:paddingLeft="20dp"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:layout_marginLeft="20dp"
                   android:src="@drawable/fax" />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="30dp">

                   <TextView
                       android:id="@+id/txt"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/white"
                       android:text="Fax"
                       android:fontFamily="@font/school_story"
                       android:textSize="20sp">
                   </TextView>

                   <TextView
                       android:id="@+id/fax"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/white"
                       android:text="(03637)-235492"
                       android:textSize="20sp" />
               </LinearLayout>
           </LinearLayout>

       </LinearLayout>

    </LinearLayout>

   </LinearLayout>
